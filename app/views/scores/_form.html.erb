<%= form_for([@wine, @wine.scores.build]) do |f| %>
  <div class="field">
    <%= f.label :reviewdate, "Review Date *" %>
    <%= f.text_field :reviewdate, :value => Time.new.strftime('%d %b %Y') %>
  </div>
  <div class="field">
    <%= f.label :score, 'Score *' %>
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :comments, 'Comments *' %>
    <%= f.text_field :comments %>
  </div>
  <div class="field">
    <%= f.label :price, 'Price *' %>
    $<%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :to %>
    <%= f.text_field :to %>
  </div>
  <div class="field">
    <%= f.label :from %>
    <%= f.text_field :from %>
  </div>
  <div class="field">
  	<label class="checkbox">
	    <%= f.check_box :in_fridge %> In fridge
  	</label>
  </div>
  <div>
    <button type="submit" class="btn">Submit</button>
  </div>
<% end %>
