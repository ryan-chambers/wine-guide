<table>
  <thead>
    <tr>
      <td>Winery name</td>
      <td>Country</td>
      <td>Region</td>
      <td>Grapes</td>
      <td>Year</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @wines.each do |wine| %>
    <tr>
      <td><%= wine.winery.name %></td>
