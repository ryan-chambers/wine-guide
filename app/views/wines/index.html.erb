      <td><%= wine.list_grape_names.join(', ') %></td>
      <td><%= wine.year %> </td>
      <td><%= link_to 'Show', wine %></td>
      <td>
        <!-- FIXME implement
        -->
        <a href="#">Add Score</a>
      </td>
    </tr>
    <% end %>
