<h2>
  <%= @wine.winery.name %> <%= @wine.grapes_to_s %> <%= @wine.year %>
  (<% if ! @wine.region.empty?%><%= @wine.region %>, <% end %><%= @wine.country %>)
<% if ! @wine.other? %>
   <%= @wine.other %>
<% end %>
</h2>

<% if ! @wine.lcbo_code.empty? %>
	<ul class="nav nav-pills">
	    <li><a href="http://www.lcbo.ca/lcbo-ear/lcbo/product/details.do?language=EN&itemNumber=<%= @wine.lcbo_code %>" target="_new">See at LCBO</a></li>
	    <li><a href="http://www.winealign.com/search?q=<%= @wine.lcbo_code %>" target="_new2">See at WineAlign</a></li>
	</ul>
<% end %>

<h3>Scores</h3>
<% if ! @wine.real_scores.empty? %>
  <table class="table">
    <tr>
      <th>Date</th>
      <th>Score</th>
      <th>Comments</th>
    </tr>
  <% @wine.real_scores.each do |score| %>
    <tr>
      <td><%= score.wine_reviewdate %></td>
      <td><%= score.wine_score %></td>
      <td><%= score.comments %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  No scores for this wine.
<% end %>

<% if ! @wine.cellar_scores.empty? %>
<h3>In Cellar</h3>
  <% @wine.cellar_scores.each do |score| %>
  <p>
    <% if ! score.from.nil? %>
    Drink From: <%= score.from %>.
    <% end %>
    <% if ! score.to.nil? %>
    Drink To: <%= score.to %>.
    <% end %>
    <%= link_to 'Edit', [@wine, score], :action => 'edit' %>
  </p>
  <% end %>
<% end %>

<h3>Add a new score</h3>
<p style="color: red"><%= notice %></p>

<%= render "scores/form" %>