  <div class="form-group">
    <%= f.label :reviewdate, "Review Date *", class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
	    <%= f.text_field :reviewdate, :class => 'datepicker', :value => Time.new.strftime('%d-%m-%Y') %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :score, 'Score *', class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
	    <%= f.text_field :score %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :comments, 'Comments *', class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
	    <%= f.text_area :comments, :rows => 4  %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :price, 'Price *', class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
    	<%= f.text_field :price %>
   	</div>
  </div>
  <div class="form-group">
    <%= f.label :drink_to, class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
	    <%= f.text_field :drink_to %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :drink_from, class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
	    <%= f.text_field :drink_from %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :bought, class: 'col-lg-2 control-label' %>
    <div class="col-lg-3">
	    <%= f.text_field :bought %>
	</div>
  </div>
  <div class="form-group">
  	<label class="col-lg-2 control-label">In fridge</label>
  	<div class="col-lg-3">
	    <%= f.check_box :in_fridge %>
	</div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
	  <button type="submit" class="btn">Submit</button>
	</div>
  </div>