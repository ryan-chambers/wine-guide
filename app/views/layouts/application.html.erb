<!DOCTYPE html>
<html>
<head>
  <title>Wine Guide</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta http-equiv="Content-language" content="en">
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="span12">
				<h1>Wine Guide</h1>
			</div>
		</div>
	    <div class="navbar">
		    <div class="navbar-inner">
			    <div class="container">
			    	<%= link_to "Wines", wines_path, :class => 'brand' %>
				    <ul class="nav">
						<li><%= link_to 'Create new wine', new_wine_path %></li>
					  	<li class="dropdown">
					  		<a data-toggle="dropdown" class="dropdown-toggle" href="#">Reports <b class="caret"></b></a>
					  		<ul class="dropdown-menu">
					  			<li><%= link_to "Cellar", { :controller => "reports", :action => "cellar" }, :class => 'cellar_report' %></li>
					  			<li><%= link_to "Country", { :controller => "reports", :action => "country" }, :class => 'cellar_report' %></li>
					  			<li><%= link_to "This Day in Wine", { :controller => "reports", :action => "this_day_in_wine" }, :class => 'cellar_report' %></li>
					  		</ul>
					  	</li>
				    </ul>
					<%= form_tag(wines_path, :method => "get", :class => 'form-search navbar-search pull-left') do %>
						<div class="input-append">
				  			<%= text_field_tag 'term', nil, :class => 'input-medium search-query span2', :placeholder => 'Search' %>
				  			<button type="submit" class="btn">Search</button>
				  		</div>
				  	<% end %>
				</div>
		    </div>
	    </div>
		<div class="row">
			<div class="span12">
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>