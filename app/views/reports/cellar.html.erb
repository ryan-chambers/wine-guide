</ul>
<h2>Cellar Report</h2>
<table class="table">
  <thead>
    <tr>
      <th>Wine</th>
      <th>Country</th>
      <th>Region</th>
      <th>Grapes</th>
      <th>Vintage</th>
      <th>
      	Bought
      </th>
      <th>Price</th>
      <th>
      	From
      <th>To</th>
      <th>
      	<select id="cellar-picker" style="width: auto">
      		<option>Both</option>
      		<option>Cellar</option>
      		<option>Fridge</option>
      	</select>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  	<% @wines.each do |wine| %>
    <tr class="js-<%= wine.cellar_bottles[0].recommended_storage %>">
      <td>
      	<%= wine.winery.name %>
      	<% if wine.other%>
	      	<br /> 
	      	<span class="muted"><%= wine.other %></span>
      	<% end %> 
      </td>
      <td><%= wine.country %></td>
      <td><%= wine.region %></td>
      <td><%= wine.list_grape_names.join(', ') %></td>
      <td><%= wine.year %> </td>
      <td><%= wine.cellar_bottles[0].bought %> </td>
      <td><%= number_to_currency(wine.cellar_bottles[0].price) %></td>
      <td><%= wine.cellar_bottles[0].drink_from %> </td>
      <td><%= wine.cellar_bottles[0].drink_to %> </td>
      <td><%= wine.cellar_bottles[0].recommended_storage %></td>
      <td><%= link_to 'Show', wine %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
	var fridge = $('.js-Fridge'),
		cellar = $('.js-Cellar');
	$('#cellar-picker').change(function(e) {
		var show = $(this).val();
		if(show === 'Both') {
			fridge.show();
			cellar.show();
		} else if(show ==='Fridge') {
			fridge.show();
			cellar.hide();
		} else {
			fridge.hide();
			cellar.show();
		}
	});
</script>
