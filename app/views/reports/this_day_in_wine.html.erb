<h2>This Day in Wine</h2>
<table class="table">
  <thead>
    <tr>
      <th>Wine</th>
      <th>Country</th>
      <th>Region</th>
      <th>Grapes</th>
      <th>Vintage</th>
      <th>Price</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
  	<% @wines.each do |wine| %>
    <tr>
      <td>
      	<%= wine.winery.name %>
      	<% if wine.other%>
	      	<br /> 
	      	<span class="muted"><%= wine.other %></span>
      	<% end %> 
      </td>
      <td><%= wine.country %></td>
      <td><%= wine.region %></td>
      <td><%= wine.list_grape_names.join(', ') %></td>
      <td><%= wine.year %> </td>
      <td><%= number_to_currency(wine.drank_this_day_bottles[0].price) %></td>
      <td><%= wine.drank_this_day_bottles[0].score %></td>
    </tr>
    <% end %>
  </tbody>
</table>